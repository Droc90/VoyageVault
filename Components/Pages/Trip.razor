<div>
    <label>Name:</label>
    <input @bind="name" />
</div>
<div>
    <label>Amount Paid:</label>
    <input type="number" @bind="amountPaid" />
</div>
<button class="btn btn-primary" @onclick="AddPayment">Add Payment</button>


@if (payments.Any())
{
    <div>
        <h4>Payments Table</h4>
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Amount Paid</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var payment in payments)
                {
                    <tr>
                        <td>@payment.Name</td>
                        <td>@payment.Amount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

